				<WorkToMake>1.8</WorkToMake>
				<WorkToBuild>1.8</WorkToBuild>
				<DoorOpenSpeed>0.7</DoorOpenSpeed>			
			</statFactors>
		</stuffProps>
	</ThingDef>

	<ThingDef ParentName="RB_BeesWaxBase">
		<defName>RB_WhiteBeeswax</defName>
		<label>white beeswax</label>
		<description>White beeswax is stronger than regular beeswax, and less flammable.</description>
		<graphicData>
