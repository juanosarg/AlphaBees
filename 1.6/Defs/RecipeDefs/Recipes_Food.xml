			<li>RB_Beekeeping_Workbench_Building</li>	
		</recipeUsers>	
		<ingredients>

			<li>
				<filter>
					<categories>
						<li>PlantFoodRaw</li>
					</categories>
				</filter>
				<count>10</count>
			</li>
			<li>
				<filter>
					<categories>
						<li>RB_Honeys</li>
						
					</categories>
				</filter>
				<count>2</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
