<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<RecipeDef>
		<defName>RB_CreateTier4Research</defName>
		<label>create tier 4 bee research</label>
		<description>Research bee combinations to create tier 4 bees. This research is random and you may get duplicate results.</description>
		<jobString>Researching bees</jobString>
		<allowMixingIngredients>true</allowMixingIngredients>
		<workAmount>500</workAmount>
		<recipeUsers>
			<li>RB_BeeResearchTable</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>RB_BeeswaxCategory</li>
					</categories>
				</filter>
				<count>50</count>
			</li>
			<li>
				<filter>
					<categories>
						<li>RB_Honeys</li>
					</categories>
				</filter>
				<count>50</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>RB_BeeswaxCategory</li>
				<li>RB_Honeys</li>
			</categories>
		</fixedIngredientFilter>
		<products>
			<RB_RandomTier4Research>1</RB_RandomTier4Research>
		</products>
		<skillRequirements>
			<Intellectual>3</Intellectual>
		</skillRequirements>
		<workSkill>Crafting</workSkill>
	</RecipeDef>
