<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!--=============== Spacer ====================-->

	<ThingDef ParentName="RB_BeeBase" Name="RB_SpacerBeeBase" Abstract="True" >
		<description>Spacer bees can survive in orbit. They are not adapted to low temperatures, but they can withstand any kind of vacuum.\n\nBee Traits:\n\nProduction time: 24 hours\nNocturnal: No\nPluviophile: No\nVacuum resistant: Yes\nUnusual plants needed: none\nMinimum Temperature: 0ºC\nMaximum temperature: 30ºC</description>
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>   
		<tradeability>Buyable,Sellable</tradeability>
		<comps>			
			<li Class="RimBees.CompProperties_Bees">
				<species>Spacer</species>
				<comb>RB_Spacer_Honeycomb</comb>
				<combtimedays>1</combtimedays>
				<nocturnal>false</nocturnal>
				<pluviophile>false</pluviophile>
				<vacuumResistant>true</vacuumResistant>
				<weirdplantneeded>no</weirdplantneeded>
				<tempMin>0</tempMin>
				<tempMax>30</tempMax>
			</li>   
		</comps>
	</ThingDef>

	<ThingDef ParentName="RB_SpacerBeeBase">
		<defName>RB_Bee_Spacer_Drone</defName>
		<label>Spacer drone</label>
		<graphicData>
			<texPath>Things/Item/Bees/RB_Bee_Spacer_Drone</texPath>
		</graphicData> 		
	</ThingDef>
	<ThingDef ParentName="RB_SpacerBeeBase">
		<defName>RB_Bee_Spacer_Queen</defName>
		<label>Spacer queen</label>
		<graphicData>
			<texPath>Things/Item/Bees/RB_Bee_Spacer_Queen</texPath>
		</graphicData> 		
	</ThingDef>
	
