<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!--=============== Nanny ====================-->

	<ThingDef ParentName="RB_BeeBase" Name="RB_NannyBeeBase" Abstract="True" >
		<description>Nanny bees just want to make children feel loved and safe.\n\nBee Traits:\n\nProduction time: 24 hours\nNocturnal: No\nPluviophile: No\nUnusual plants needed: none\nMinimum Temperature: 0ºC\nMaximum temperature: 30ºC</description>
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>   
		<tradeability>Buyable,Sellable</tradeability>
		<comps>			
			<li Class="RimBees.CompProperties_Bees">
				<species>Nanny</species>
				<comb>RB_Nanny_Honeycomb</comb>
				<combtimedays>1</combtimedays>
				<nocturnal>false</nocturnal>
				<pluviophile>false</pluviophile>
				<weirdplantneeded>no</weirdplantneeded>
				<tempMin>0</tempMin>
				<tempMax>30</tempMax>
			</li>   
		</comps>
	</ThingDef>

	<ThingDef ParentName="RB_NannyBeeBase">
		<defName>RB_Bee_Nanny_Drone</defName>
		<label>Nanny drone</label>
		<graphicData>
			<texPath>Things/Item/Bees/RB_Bee_Nanny_Drone</texPath>
		</graphicData> 		
	</ThingDef>
	<ThingDef ParentName="RB_NannyBeeBase">
		<defName>RB_Bee_Nanny_Queen</defName>
		<label>Nanny queen</label>
		<graphicData>
			<texPath>Things/Item/Bees/RB_Bee_Nanny_Queen</texPath>
		</graphicData> 		
	</ThingDef>
	
