<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!--=============== Alphapack ====================-->
	<ThingDef ParentName="RB_BeeBase" Name="RB_AlphapackBeeBase" Abstract="True">
		<description>Alphapack bees are expert geneticists. They will analyze surrounding animals and plants and extract genetic markers to store on their combs.\n\nBee Traits:\n\nProduction time: 120 hours\nNocturnal: No\nPluviophile: No\nUnusual plants needed: none\nMinimum Temperature: 0ºC\nMaximum temperature: 30ºC</description>
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<tradeability>Buyable,Sellable</tradeability>
		<comps>
			<li Class="RimBees.CompProperties_Bees">
				<species>Alphapack</species>
				<comb>RB_Alphapack_Honeycomb</comb>
				<combtimedays>5</combtimedays>
				<nocturnal>false</nocturnal>
				<pluviophile>false</pluviophile>
				<weirdplantneeded>no</weirdplantneeded>
				<tempMin>0</tempMin>
				<tempMax>30</tempMax>
			</li>
		</comps>
	</ThingDef>
	<ThingDef ParentName="RB_AlphapackBeeBase">
		<defName>RB_Bee_Alphapack_Drone</defName>
		<label>Alphapack drone</label>
		<graphicData>
			<texPath>Things/Item/Bees/RB_Bee_Alphapack_Drone</texPath>
		</graphicData>
	</ThingDef>
	<ThingDef ParentName="RB_AlphapackBeeBase">
		<defName>RB_Bee_Alphapack_Queen</defName>
		<label>Alphapack queen</label>
		<graphicData>
			<texPath>Things/Item/Bees/RB_Bee_Alphapack_Queen</texPath>
		</graphicData>
	</ThingDef>
